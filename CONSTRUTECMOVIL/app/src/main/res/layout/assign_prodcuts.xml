<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:id="@+id/_addproduct"
            android:layout_gravity="left|bottom"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="120dp" />

        <EditText
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/_pramount"
        android:layout_gravity="right|bottom"
        android:hint="Amount"
        android:inputType="number"
        android:layout_marginTop="-60dp"
        android:layout_marginRight="10dp"
            android:layout_marginBottom="130dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_stagespinner"
            android:layout_gravity="center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_listviewprojectspro"
            android:visibility="visible"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choose the project"
            android:id="@+id/textView5"
            android:layout_gravity="left|top"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choose stage"
            android:id="@+id/textView7"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choose product"
            android:id="@+id/textView8"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="200dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="47dp"
            android:layout_height="54dp"
            android:background="@drawable/ic_add_shopping_cart_black_24dp"
            android:id="@+id/_addproducttoDB"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginRight="0dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="20dp" />
    </FrameLayout>

</LinearLayout>